{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "eu-west-1",
        "source_ami": "ami-47a23a30",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "helloworld-{{timestamp}}",
        "tags": {
            "Name": "helloworld"
        }
    }],
    "provisioners": [
        {
            "type": "shell",
            "script": "packer/install-puppet.sh"
        },   
        {
            "type": "puppet-masterless",
            "manifest_file": "packer/ami.pp",
            "module_paths": ["packer/modules"]
        }
    ]
}
